automaton blinker:
	cont timer der 1;
	location Start:
		initial;
		//edge when s_Tinitialized and s_Binitialized do timer := 0 goto Wait2s;
		edge do timer := 0 goto Wait2s;
	location Wait2s:
		edge when timer > 2 goto TurnQ2LedOn;
	location TurnQ2LedOn:
		edge led2.turnOn ! 1 goto Q2Activated;
	location Q2Activated:
		edge when startBttn.Pressed goto TurnQ2LedOff;
	location TurnQ2LedOff:
		edge led2.turnOff ! 1 goto WaitForRelease;
	location WaitForRelease:
		edge when not startBttn.Pressed goto BlinkQ1On;
	location BlinkQ1On:
		edge led1.turnOff ! 1 when timer > 0.5 do timer := 0 goto BlinkQ1Off;
		location BlinkQ1Off:
		edge led1.turnOn ! 1 when timer > 0.5 do timer := 0 goto BlinkQ1On;

end
startBttn: Button(e_startClicked);
led1: Led();
led2: Led();

automaton def Button(event Clicked):
	alg bool state;
	location Released:
		equation state = false;
		initial;
		edge Clicked goto Pressed;
	location Pressed:
		equation state = true;
		edge Clicked goto Released;
end

automaton def Led():
	event int turnOn, turnOff;
	location On:
		edge turnOff ? goto Off;
		edge turnOn ?;
	location Off:
		initial;
		edge turnOn ? goto On;
		edge turnOff?;
end
